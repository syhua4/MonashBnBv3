@model IEnumerable<MonashBnBv3.Models.AspNetUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
<style>
    .form-horizontal {
        margin-top: 70px;
    }

    h4 {
        margin-top: 30px;
        margin-bottom: 16px;
    }

    .btn-primary {
        margin-top: 16px;
        cursor: pointer;
        background-color: rgb(244, 154, 153);
        border: none;
    }

        .btn-primary:hover {
            cursor: pointer;
            background-color: #ee7c72;
            border: none;
        }
</style>

@using (Html.BeginForm("BulkMail", "Mail", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    <div class="form-horizontal container col-md-11">
        <h4>Mail Receipient</h4>
        <table class="table">
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Mail.mailSelected)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Send Email
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>

            @*<td>
            @Html.CheckBoxFor(modelItem => item.Mail.mailSelected))
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <input type="checkbox" class="check" value="@item.Email" name="resp" />
            </td>
        </tr>
            }

        </table>

        <input type="submit" class="btn btn-primary" value="Send Email" />
    </div>
}
<script>
    $(document).ready(function () {
        if ('@ViewBag.Message' == 'Error') {
            alert('Please select at least one email receipient!');
        }
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}