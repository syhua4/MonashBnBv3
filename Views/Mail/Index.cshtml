@model IEnumerable<MonashBnBv3.Models.AspNetUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
    .form-horizontal {
        margin-top: 70px;
    }
    h4{
        margin-top:30px;
        margin-bottom:16px;
    }
    </style>

    <div class="form-horizontal container col-md-11">
        <h4>Mail Receipient</h4>
        <table class="table">
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.Mail.mailSelected)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    @*<td>
                        @Html.CheckBoxFor(modelItem => item.Mail.mailSelected))
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.ActionLink("Send Mail", "SendMail", new { id = item.Id, email = item.Email }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
