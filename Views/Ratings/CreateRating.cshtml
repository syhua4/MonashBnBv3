@model MonashBnBv3.Models.Rating

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-horizontal {
        margin-top: 70px;
    }
    .rate{
        margin-left:16px;
        margin-top:32px;
    }
    .control-label {
        font-weight: 600;
        margin-bottom: 16px;
        margin-top: 32px;
    }
        .btn-primary {
        margin-top: 16px;
        cursor: pointer;
        background-color: rgb(244, 154, 153);
        border: none;
    }

        .btn-primary:hover {
            cursor: pointer;
            background-color: #ee7c72;
            border: none;
        }

    .btn1 {
        margin-right: 16px;
        margin-left:16px;
    }
</style>
<div class="form-horizontal container col-md-11">
    <h2>Rate Your Stay!</h2>
    <hr />
    @using (Html.BeginForm("SetRating", "Ratings"))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" hidden>
            @Html.LabelFor(model => model.hotelId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.hotelId, "", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.ratingHotel, @Name = "hotelId", @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.hotelId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">Hotel</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hotel.hotelName, "", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.ratingHotelName, @ReadOnly = "true" } })

            </div>
        </div>
        <div class="form-group" hidden>
            @Html.LabelFor(model => model.reserveId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.reserveId, "", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.reserveId, @Name = "reserveId" } })

            </div>
        </div>
        <div class="form-group rate">
            @for (int i = 1; i < 6; i++)
            {
                <input type="radio" name="rank" id=" ratingStar" value="@i" /> @i

            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="row">
                    <input type="submit" value="Rate" class="btn btn-primary btn1" />
                    <input type="button" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Index", "Reservations")'" />
                </div>
            </div>

        </div>
    }
    </div>
