@model MonashBnBv3.Models.Image

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-horizontal {
        margin-top: 70px;
    }

    .btn-primary {
        margin-top: 16px;
        cursor: pointer;
        background-color: rgb(244, 154, 153);
        border: none;
    }

        .btn-primary:hover {
            cursor: pointer;
            background-color: #ee7c72;
            border: none;
        }
</style>
<h2>Create</h2>

@using (Html.BeginForm("Create", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container col-md-11">
        <h4>Upload Image</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.imageName, "Image Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-4 col-md-6 col-sm-8">
                @Html.EditorFor(model => model.imageName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imageName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-8" style="margin-bottom:16px">
                    <input type="file" class="btn btn-default" id="inputGroupFile02" name="postedFile" accept="image/png, image/gif, image/jpeg, image/jpg" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>

}
