@model MonashBnBv3.Models.Reservation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-horizontal {
        margin-top: 70px;
    }

    .btn-primary {
        margin-top: 16px;
        cursor: pointer;
        background-color: rgb(244, 154, 153);
        border: none;
    }

        .btn-primary:hover {
            cursor: pointer;
            background-color: #ee7c72;
            border: none;
        }

    .btn1 {
        margin-right: 16px;
    }

    .control-label {
        font-weight: 600;
        margin-bottom: 16px;
        margin-top: 32px;
    }

</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container col-md-11">
    <h4>Please Confirm Your Reservation Details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2">Hotel</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Hotel.hotelName, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.hotelName, @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.hotelId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Room</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Room.RoomType.roomTypeName, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.roomType, @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.Room.RoomType.roomTypeId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Check In</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.reserveCheckIn, "", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.d1, @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.reserveCheckIn, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Check Out</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.reserveCheckOut, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.d2, @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.reserveCheckOut, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Days of Stay</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.reserveCheckIn, "", new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.day, @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.reserveCheckIn, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Price Per Day</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.reserveCheckOut, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.price, @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.reserveCheckOut, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Total Price</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.reservePrice, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.totalPrice, @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.reservePrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirm" class="btn btn-primary" />
            <input type="button" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Index", "Rooms")'" />

        </div>
    </div>

</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}